{% extends "::base.html.twig" %}
{% block css %}
    {{ parent() }}
    {% stylesheets output="css/compiled/mainWithDropifyKendoComobox.css" filter="cssrewrite"
    'bundles/grifoflextunisie/assets/skins/dropify/css/dropify.css'
    'bundles/grifoflextunisie/bower_components/kendo-ui/styles/kendo.common-material.min.css'
    'bundles/grifoflextunisie/bower_components/kendo-ui/styles/kendo.material.min.css' %}
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock %}
{% block title %}
    Ajouter un produit - {{ parent() }}
{% endblock %}
{% block body %}
    <div id="page_heading" data-uk-sticky="{ top: 48, media: 960 }">
        <h1>Formulaire d'ajout du produit</h1>
        <span class="uk-text-muted uk-text-upper uk-text-small">Veuillez bien remplir les champs</span>
    </div>
    {{ include("GrifoflexTunisieBundle:Product:form.html.twig") }}
{% endblock %}
{% block js %}
    {{ parent() }}
    <script>
        altair_forms.parsley_validation_config();
    </script>
    {% javascripts output="js/compiled/mainWithDropifyAndKendoComobox.js"
    'bundles/grifoflextunisie/assets/js/custom/dropify/dist/js/dropify.min.js'
    'bundles/grifoflextunisie/assets/js/kendoui_custom.min.js'
    'bundles/grifoflextunisie/assets/js/pages/forms_file_input.min.js'
    'bundles/grifoflextunisie/bower_components/parsleyjs/dist/parsley.min.js'
    'bundles/grifoflextunisie/assets/js/pages/forms_validation.min.js'
    'bundles/grifoflextunisie/assets/js/kendoui_custom.js'
    'bundles/grifoflextunisie/assets/js/pages/kendoui.js'
    'bundles/grifoflextunisie/sfCollectionAnalyzer/sf_collection_analyzer.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}