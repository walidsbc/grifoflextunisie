{% extends '::baseFront.html.twig' %}
{% block title %} {{ 'event.list.events'|trans({},'event') }} - {{ parent() }} {% endblock %}
{% block css %}
    {{ parent() }}
{% endblock %}
{% block jshead %}
    {{ parent() }}
{% endblock %}
{% block body %}


    <!-- basic-blo-area -->
    <div class="basic-blog-area gray-bg ptb-90">
        <div class="container">
            <div class="area-title text-center">
                <h2>{{ 'event.ourevents'|trans({},'event') }}</h2>
            </div>
            <div class="row blog-masonry">
                {% for event in events %}

                    <div class="col-sm-6 col-md-4 blog-item">
                        <!-- POST -->
                        <article class="post">
                            <div class="post-thumbnail">
                                <img src="{{ vich_uploader_asset(event, 'mainPictureFile') }}"
                                     alt="{{ 'event.main.picture'|trans({},'event') }}">
                            </div>
                            <div class="post-header">
                                <div class="post-meta">
                                    {{ 'event.eventDate'|trans({},'event') }}:  {{ event.eventDate|date("d/m/Y") }}
                                </div>
                                <h2 class="post-title"><a
                                            href="{{ path('event_view', { 'id': event.id } ) }}">{{ event.title }}</a>
                                </h2>
                            </div>
                            <div class="post-content">
                                <p>{{ event.description|slice(0, 100) }} {% if event.description|length >= 100 %}{{ '...' }} {% endif %}</p>
                                <a class="post-more"
                                   href="{{ path('event_view', { 'id': event.id } ) }}">{{ 'event.readmore'|trans({},'event') }}
                                    &rarr;</a>
                            </div>
                        </article>
                        <!-- /POST -->
                    </div>

                {% endfor %}

            </div>


        </div>
    </div>
    <!-- basic-blog-area end -->
{% endblock %}
{% block js %}
    {{ parent() }}
{% endblock %}