                    modal.style.display = "block";
                    // When the user clicks on <span> (x), close the modal
                    span.onclick = function() {
                        modal.style.display = "none";
                    }

                },
                error: function () {

                    modal.style.display = "none";
                    headmodal.html('');
                    headmodal.append('Erreur');
                    bodymodal.html('');
                    bodymodal.append("<div class='error_message'>Erreur lors du l\'envoi du mail, veuillez r√©essayer ult√©rieurement.</div>");


